.b-common-wrap
	margin-bottom 44px
	@media $max_sm
		margin-bottom 0

.b-container
	max-width 1400px
	width 100%
	margin 0 auto
	position relative
	height 100%
	padding 0 50px
	@media $max_mm
		padding 0
	@media $max_sm
		padding 0

.b-button
	border-bottom 1px dotted #333
	display inline-block
	padding-bottom 3px
	display none
	font-size 13px
	cursor pointer
	@media $max_sm
		display inline-block
	&.active
		display none

.b-header
	position relative
	&__img
		max-width 100%
		height auto
		display inline-block
		vertical-align middle
		@media $max_sm
			display none
		&.mobile
			display none
			@media $max_sm
				display inline-block
	&__logo
		margin-right 34px
		@media $max_sm
			margin-right 0
	&__top
		height 60px
		display table
		width 100%
		padding 25px 50px 0
		@media $max_sm
			display none
	&__left, &__right
		display table-cell
		vertical-align top
	&__left-bottom, &__right-bottom
		display table-cell
		vertical-align middle
	&__right, &__right-bottom
		text-align right
	&__item
		font-size 13px
		color #777
		font-family 'Open Sans'
		padding-right 24px
		&:last-child
			@media $max_md
				display none
				padding-right 0
	&__bottom
		padding 29px 50px
		display table
		width 100%
		background-color #fff
		margin-bottom 3px
		@media $max_sm
			margin-bottom 0
			padding 15px 20px
			border-bottom 1px solid #e5e5e5
	&__menu, &__logo
		display inline-block
		vertical-align middle
	&__menu
		@media $max_sm
			display none
	&__search
		display inline-block
		vertical-align middle
		sprite($s-search)
		margin-right 13px
		@media $max_sm
			display none
	&__menu-mobile
		display none
		vertical-align middle
		margin-left 15px
		width 39px
		height 39px
		position relative
		background-color $yellow
		cursor pointer
		&:after
			content ''
			position absolute
			align()
			sprite($s-mobile-menu)
		@media $max_sm
			display inline-block
		&.active
			&:after
				content ''
				sprite($s-cross)

.p-decor .b-header
	&__bottom
		margin-bottom 0

.p-main .b-header
	&__bottom
		margin-bottom 0

.p-fasteners .b-header
	&__bottom
		margin-bottom 0

.p-electric .b-header
	&__bottom
		margin-bottom 0

.b-basket
	text-decoration none
	display inline-block
	vertical-align middle
	padding 15px 12px 15px 15px
	border 2px solid #efefef
	@media $max_sm
		border 2px solid transparent
		padding 7px 0 7px 6px
		.b-basket
			&__img
				&:after
					content ''
					sprite($s-basket)
	&.total
		border 2px solid $yellow
	&.active
		border 2px solid $yellow
	&:hover, &.active
		background-color $yellow
		.b-basket
			&__img
				&:after
					content ''
					sprite($s-basket)
	&__img
		width 25px
		height 21px
		display inline-block
		vertical-align middle
		position relative
		&:after
			content ''
			position absolute
			sprite($s-basket-fog)
			left 0
			top 0
	&__value
		padding-left 7px
		font-weight 300
		display inline-block
		vertical-align middle
		font-size 14px

.b-menu-mobile
	display none
	top 69px
	z-index 10
	background-color $yellow
	left 0
	width 100%
	display none
	position absolute
	&.active
		display block

.b-menu-product
	display inline-block
	vertical-align middle
	@media $max_sm
		padding 20px 0
	&.mobile
		@media $max_sm
			display block
			border-bottom 1px solid #fff
	@media $max_sm
		display none
	&__item
		display inline-block
		margin-right 33px
		position relative
		border-bottom 1px solid $yellow
		padding 2px
		@media $max_md
			margin-right 28px
		@media $max_sm
			text-align center
			margin-right 0
			border-bottom 0
			color #000
			line-height 50px
			display block
		&:last-child
			margin-right 0
		&:hover
			border-bottom 0
			.b-menu-product
				&__wrap
					display block
	&__row
		text-decoration none
		font-size 15px
		color #000
		text-transform uppercase
		@media $max_sm
			display block
	&__wrap
		position absolute
		z-index 100
		display none
		padding-top 20px
		left -20px
	&__item-wrap
		padding 15px 21px
		border 2px solid $yellow
		background-color #fff
		box-shadow 0 0 7px 2px #fff7d3
	&__item-a
		white-space nowrap
		line-height 40px
		padding-bottom 2px
		position relative
		display inline-block
		text-decoration none
		font-size 15px
		text-transform uppercase
		color #000
		&:after
			content ''
			position absolute
			width 100%
			height 1px
			background-color $yellow
			display block
			left 0
			bottom 11px
		&:hover
			&:after
				content ''
				display none

