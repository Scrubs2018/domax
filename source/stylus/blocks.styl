.im-sbox
	margin-bottom 20px
	display none
	position relative
	@media $max_sm
		display block
	.im-sbox-active
		cursor pointer
		background-color $yellow
		display block
		appearance none
		font-size 13px, false
		color #000
		text-transform uppercase
		line-height 41px
		padding 0 30px 0 17px
		position relative
		&:before, &:after
			background-image url(../img/sprite.png)
		&:after
			content ''
			position absolute
			sprite($s-control)
			vAlign()
			right 17px
	.im-sbox-select
		display none
		position absolute
		z-index 100
		width 100%
		appearance none
	.im-sbox-option
		display block
		cursor pointer
		padding-left 17px
		border-bottom 1px solid #fff
		background-color $yellow
		display block
		appearance none
		font-size 13px, false
		color #000
		text-transform uppercase
		line-height 41px
		position relative
		&:first-child
			border-top 1px solid #fff

