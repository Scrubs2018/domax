html
	height 100%
	font-size $rootFontSize, false

body
	font-family 'Exo 2', sans-serif
	min-height 100%
	color #333
	position relative
	background-color #efefef
	-webkit-text-size-adjust 100%
	-webkit-font-size-adjust 100%

img
	display block

h1, h2, h3, h4, h5
	color #333
	line-height 20px
	font-weight 300

h1
	font-size 40px
	margin-bottom 50px
	line-height 35px
h2
	font-size 30px
	margin-bottom 40px
	line-height 30px
h3
	font-size 25px
	margin-bottom 35px
	line-height 25px
h4
	font-size 22px
	margin-bottom 30px
	line-height 22px
h5
	font-size 20px
	margin-bottom 28px
	line-height 20px

p
	margin-bottom 30px
	font-family 'Open Sans'
	font-weight 400
	font-size 13px
	color #333333
	line-height 20px
	&:last-child
		margin-bottom 47px

table
	margin 26px 0
	width 100%
th
	height 48px
	line-height 48px
	text-align left
	padding 0 15px
th, td
	border 1px solid #fdd20d
	font-family 'Open Sans'
	font-weight 400
	font-size 13px
	color #333333
	line-height 20px
td
	padding 10px 15px

ul, ol
	margin-bottom 20px
	font-size 14px
	color #333
	li
		list-style-position inside
		margin-bottom 10px
		font-family 'Open Sans'
		font-size 13px
		color #333
		line-height 34px
		margin-left 15px

ul li
	padding-left 19px
	list-style none
	background-image url(../img/line.jpg)
	background-position center left
	background-repeat no-repeat

i
	font-style italic

b, strong
	font-weight 600

button
	border 0

a
	text-decoration none
	cursor pointer

.-no-border, _no-border *
	border 0

._img-left,
._img-right
	margin-bottom 37px
	height auto

._img-left
	float left
	margin-right 30px

._img-right
	float right
	margin-left 30px

.-text-center
	text-align center

.-text
	> p
		&:last-child
			margin-bottom 0

.fancybox-skin
	box-shadow none !important
	border-radius 0

.fancybox-wrap
	opacity 0

.owl-carousel .owl-item
	-webkit-transform translateZ(0)

.swiper-container
	.swiper-prev, .swiper-next
		vAlign()
	.swiper-prev
		left 0
	.swiper-next
		right 0

.-hidden-lg
	@media $max_lg
		display none
.-hidden-md
	@media $max_md
		display none
.-hidden-sm
	@media $max_sm
		display none
.-hidden-xs
	@media $max_xs
		display none

.-visible-lg
	display none
	@media $max_lg
		display block
.-visible-md
	@media $max_md
		display block
	@media $min_lg
		display none
.-visible-sm
	@media $max_sm
		display block
	@media $min_md
		display none
.-visible-xs
	@media $max_xs
		display block
	@media $max_sm
		display none
